# processsutra Production Environment Configuration
# Copy this file to .env on your VPS server and update the values

# Database Configuration
DATABASE_URL=postgresql://processsutra_user:processsutra_password_123@localhost:5432/processsutra

# Application Configuration
NODE_ENV=production
PORT=3000

# Domain Configuration - Update with your domain or IP
DOMAIN=62.72.57.53
REPLIT_DOMAINS=62.72.57.53,localhost

# Security - Generate a strong session secret
SESSION_SECRET=your_super_secret_session_key_here_change_this

# Firebase Configuration (Optional - for Firebase Auth)
